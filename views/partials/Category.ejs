<div class="form-popup" id="myForm">
 <h2>Add Category </h2>
  <form  class="form-container"action="/admin/category" enctype="multipart/form-data" method="POST">
    <label for="name"><b>Name</b></label>
    <input type="text" placeholder="Enter Name" name="category_name" required>

    <label for="file"><b>select file</b></label>
    <input type="file" placeholder="Choose image" name="image"  required>
    <br><br>
    <button type="submit" class="btn">Submit</button>
    <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
  </form>
</div>

<script>
function openForm() {
  document.getElementById("myForm").style.display = "block";
}

function closeForm() {
  document.getElementById("myForm").style.display = "none";
}
</script>


           
